@model List<Medicine>

<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
	<div class="container py-5">
		<h1 class="display-3 text-white mb-3 animated slideInDown">Medicine Management</h1>
		<nav aria-label="breadcrumb animated slideInDown">
			<ol class="breadcrumb text-uppercase mb-0">
				<li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
				<li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
				<li class="breadcrumb-item text-primary active" aria-current="page">Medicine</li>
			</ol>
		</nav>
	</div>
</div>

<div class="container-xxl py-5">
	<div class="container">
		<div class="mb-4 d-flex justify-content-between align-items-center">
			<h2 class="text-primary">Medicine List</h2>
			@if (User.IsInRole("Admin"))
			{
				<a asp-controller="Medicine" asp-action="Create" class="btn btn-success">
					<i class="fas fa-plus me-2"></i>Add New Medicine
				</a>
			}
		</div>

		<!-- Filter Form -->
		<form method="get" asp-action="Filter" asp-controller="Medicine" class="d-flex flex-wrap gap-3 align-items-center mb-4">
			<div class="input-group" style="width: 250px;">
				<input type="text" name="SearchName" class="form-control" placeholder="Search by medicine name" value="@ViewBag.SearchName" />
				<span class="input-group-text bg-white"><i class="fas fa-search text-muted"></i></span>
			</div>

			<select name="TypeFilter" class="form-select" style="width: 180px;">
				<option value="">All Types</option>
				@if (ViewBag.MedicineTypes != null)
				{
					foreach (var type in ViewBag.MedicineTypes as List<string>)
					{
						<option value="@type">@type</option>
					}
				}
			</select>


			<button type="submit" class="btn btn-primary">
				<i class="fas fa-filter me-1"></i>Filter
			</button>
			<a href="@Url.Action("Index", "Medicine")" class="btn btn-outline-secondary">
				<i class="fas fa-times me-1"></i>Clear
			</a>
		</form>

		<!-- Medicine Cards View (Better for images) -->
		<div class="row g-4 mb-4">
			@if (Model != null && Model.Any())
			{
				foreach (var medicine in Model)
				{
					<div class="col-lg-4 col-md-6">
						<div class="card h-100 shadow-sm border-0">
							<div class="position-relative overflow-hidden" style="height: 200px;">
								<div class="profile-image h-100 w-100">
									<img src="@(medicine.Image != null
										 ? $"data:image/png;base64,{medicine.Image}"
										 : Url.Content("~/img/logo.jpg"))"
										 alt="@medicine.Name"
										 class="w-100 h-100"
										 style="object-fit: cover; object-position: center; display: block;" />
								</div>
							</div>
							<div class="card-body d-flex flex-column">
								<h5 class="card-title text-primary">@medicine.Name</h5>
								<p class="card-text text-muted small flex-grow-1">@medicine.Description</p>
								<div class="mt-auto">
									<div class="d-flex justify-content-between align-items-center mb-3">
										<span class="text-primary">@medicine.Price.ToString("0") VND</span>
										<small class="text-muted">/@medicine.Unit</small>
									</div>
									<div class="d-flex gap-2 w-100">
										<a asp-action="Edit" asp-controller="Medicine" asp-route-id="@medicine.MedicineId"
										   class="btn btn-outline-primary btn-sm flex-fill text-nowrap">
											<i class="fas fa-eye"></i> View
										</a>

										@if (User.IsInRole("Admin"))
										{
											<a asp-action="Edit" asp-controller="Medicine" asp-route-id="@medicine.MedicineId"
											   class="btn btn-outline-warning btn-sm flex-fill text-nowrap">
												<i class="fas fa-edit"></i> Edit
											</a>

											<form asp-action="Delete" asp-controller="Medicine" asp-route-id="@medicine.MedicineId"
												  method="post" onsubmit="return confirm('Are you sure you want to delete this medicine?');"
												  class="flex-fill" style="margin: 0;">
												<button type="submit" class="btn btn-outline-danger btn-sm w-100 text-nowrap">
													<i class="fas fa-trash"></i> Delete
												</button>
											</form>
										}
									</div>

								</div>
							</div>
						</div>
					</div>
				}
			}
			else
			{
				<div class="col-12">
					<div class="text-center py-5">
						<i class="fas fa-pills fa-5x text-muted mb-3"></i>
						<h4 class="text-muted">No medicines found</h4>
						<p class="text-muted">Try adjusting your search criteria or add a new medicine.</p>
						@if (User.IsInRole("Admin"))
						{
							<a href="@Url.Action("Create", "Medicine")" class="btn btn-primary">
								<i class="fas fa-plus me-2"></i>Add First Medicine
							</a>
						}
					</div>
				</div>
			}
		</div>


	</div>
</div>

<a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-circle back-to-top"><i class="bi bi-arrow-up"></i></a>


<style>
	.profile-image {
		height: 100%;
		width: 100%;
		overflow: hidden;
		position: relative;
	}

	.card {
		transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
	}

		.card:hover {
			transform: translateY(-5px);
			box-shadow: 0 8px 25px rgba(0,0,0,0.1) !important;
		}

	.btn-group .btn {
		border-radius: 0;
	}

		.btn-group .btn:first-child {
			border-top-left-radius: 0.375rem;
			border-bottom-left-radius: 0.375rem;
		}

		.btn-group .btn:last-child {
			border-top-right-radius: 0.375rem;
			border-bottom-right-radius: 0.375rem;
		}

	.text-truncate {
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
	}

</style>