@model Medicine

<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Edit Medicine</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb text-uppercase mb-0">
                <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                <li class="breadcrumb-item"><a class="text-white" asp-controller="Medicine" asp-action="Index">Medicine</a></li>
                <li class="breadcrumb-item text-primary active" aria-current="page">Edit</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-8 mx-auto">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-primary text-white py-3">
                        <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Edit Medicine Information</h4>
                    </div>
                    <div class="card-body p-4">

                        <!-- FORM CHỈ DÀNH CHO THÔNG TIN THUỐC -->
                        <form asp-action="Edit" asp-controller="Medicine" method="post">
                            <input type="hidden" asp-for="MedicineId" />

                            <div class="row mb-4">
                                <div class="col-md-8">
                                    <div class="mb-3">
                                        <label asp-for="Name" class="form-label fw-bold">Medicine Name <span class="text-danger">*</span></label>
                                        <input asp-for="Name" class="form-control" placeholder="Enter medicine name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="MedicineType" class="form-label fw-bold">Medicine Type <span class="text-danger">*</span></label>
                                        <input asp-for="MedicineType" class="form-control" placeholder="Enter medicine type" />
                                        <span asp-validation-for="MedicineType" class="text-danger"></span>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label asp-for="Price" class="form-label fw-bold">Price (VND) <span class="text-danger">*</span></label>
                                            <input asp-for="Price" class="form-control" placeholder="Enter price" />
                                            <span asp-validation-for="Price" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label asp-for="Unit" class="form-label fw-bold">Unit <span class="text-danger">*</span></label>
                                            <input asp-for="Unit" class="form-control" placeholder="e.g., pill, bottle" />
                                            <span asp-validation-for="Unit" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="mb-3 text-center">
                                        <label class="form-label fw-bold d-block">Current Image</label>
                                        <div class="border rounded p-2 mb-2" style="height: 200px;">
                                            <img id="image-preview" src="@(Model.Image != null ? $"data:image/png;base64,{Model.Image}" : Url.Content("~/img/logo.jpg"))"
                                                 alt="@Model.Name" class="img-fluid" style="max-height: 100%; object-fit: contain;" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label fw-bold">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter medicine description"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a asp-action="Index" asp-controller="Medicine" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-1"></i> Back to List
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i> Save Changes
                                </button>
                            </div>
                        </form>

                        <hr class="my-4" />

                        <!-- FORM UPLOAD ẢNH RIÊNG BIỆT -->
                        <form asp-action="UploadPhoto" asp-controller="Medicine" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="medicineId" value="@Model.MedicineId" />

                            <div class="mb-3">
                                <label for="photo" class="form-label fw-bold">Upload New Image</label>
                                <input type="file" class="form-control" name="photo" accept=".jpg,.jpeg,.png,.gif" />
                            </div>

                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-upload me-1"></i> Upload Image
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                document.getElementById('image-preview').src = e.target.result;
            }

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
