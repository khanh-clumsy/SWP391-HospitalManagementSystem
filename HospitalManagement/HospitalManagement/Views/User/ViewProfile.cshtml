@{
	ViewData["Title"] = "View Profile";
}
<!DOCTYPE html>
<html lang="en">
<head>
	<!-- Template Stylesheet -->
	<link href="/css/doctorprofile.css" rel="stylesheet">
</head>


<body>
	<!-- Profile Start -->
	<div class="container-xxl doctor-profile py-5">
		<div class="container">

			<div class="row mb-4">
				<div class="col-12">
					<a asp-controller="Patient" asp-action="ViewDoctors" class="back-to-list">
						<i class="fas fa-arrow-left"></i>
						Back to Doctor List
					</a>
				</div>
			</div>

			<div class="row g-4 align-items-stretch">
				<!-- Image and Update Buttons -->
				<div class="left-content col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
					<div class="profile-card text-center">
						<div class="profile-image">
							<img src="/img/team-2.jpg" alt="User's Photo">
						</div>
						<div class="profile-buttons">
							<div class="d-flex gap-2 justify-content-center flex-wrap">
								<a class="btn btn-primary flex-fill text-center" asp-controller="User" asp-action="UpdateProfile">Update Profile</a>
								<a class="btn btn-primary flex-fill text-center" asp-controller="User" asp-action="ChangePassword">Change Password</a>
								<a class="btn btn-outline-primary flex-fill text-center" asp-controller="Patient" asp-action="ViewDoctors">Logout</a>
							</div>
						</div>

					</div>
				</div>

				<!-- Doctor Information -->
				<div class="col-lg-8 wow fadeInUp" data-wow-delay="0.3s">
					<div class="profile-card">
						<div class="profile-info">
							<h2> Profile Details</h2>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-user"></i>
								</div>
								<div class="info-content">
									<h5>Full Name</h5>
									<p>Tran Viet Hai</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-venus-mars"></i>
								</div>
								<div class="info-content">
									<h5>Gender</h5>
									<p>Male</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-envelope"></i>
								</div>
								<div class="info-content">
									<h5>Email</h5>
									<p>haitv1709@gmail.com</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-phone"></i>
								</div>
								<div class="info-content">
									<h5>Phone</h5>
									<p>0123456789</p>
								</div>
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>



	<!-- JavaScript Libraries -->
	<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/lib/wow/wow.min.js"></script>
	<script src="/lib/easing/easing.min.js"></script>
	<script src="/lib/waypoints/waypoints.min.js"></script>
	<script src="/lib/counterup/counterup.min.js"></script>
	<script src="/lib/owlcarousel/owl.carousel.min.js"></script>
	<script src="/lib/tempusdominus/js/moment.min.js"></script>
	<script src="/lib/tempusdominus/js/moment-timezone.min.js"></script>
	<script src="/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

	<!-- Template Javascript -->
	<script src="/js/main.js"></script>
</body>

</html>