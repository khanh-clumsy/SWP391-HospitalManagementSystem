@model HospitalManagement.Models.Doctor
@{
	ViewData["Title"] = "View Profile";
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>Patient Detail</title>
	<meta content="width=device-width, initial-scale=1.0" name="viewport">
	<meta content="" name="keywords">
	<meta content="" name="description">

	<!-- Favicon -->
	<link href="/img/favicon.ico" rel="icon">

	<!-- Google Web Fonts -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&family=Roboto:wght@500;700;900&display=swap" rel="stylesheet">

	<!-- Icon Font Stylesheet -->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

	<!-- Libraries Stylesheet -->
	<link href="/lib/animate/animate.min.css" rel="stylesheet">
	<link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
	<link href="/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

	<!-- Customized Bootstrap Stylesheet -->
	<link href="/css/bootstrap.min.css" rel="stylesheet">

	<!-- Template Stylesheet -->
	<link href="/css/style.css" rel="stylesheet">
	<!-- Template Stylesheet -->
	<link href="/css/doctorprofile.css" rel="stylesheet">
</head>


<body>
	<!-- Profile Start -->
	<div class="container-xxl doctor-profile py-5">
		<div class="container">
			<div class="row mb-4">
				<div class="col-12">
					<a asp-action="ManageAccount" asp-controller="User" class="back-to-list" asp-route-type="Doctor">
						<i class="fas fa-arrow-left"></i> Back to Account list
					</a>
				</div>
			</div>

			<div class="row g-4 align-items-stretch">
				<!-- Doctor Image -->
				<div class="left-content col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
					<div class="profile-card text-center">
						<div class="profile-image">
							<img src="@(Model.ProfileImage != null
									 						? $"data:image/png;base64,{Model.ProfileImage}"
															: Url.Content("~/img/logo.jpg"))" alt="Doctor's Photo">
						</div>
						<div class="profile-buttons">
							<div class="d-flex gap-2 justify-content-center flex-wrap">
								<h3>Profile Image</h3>
							</div>
						</div>
					</div>
				</div>

				<!-- Doctor Information -->
				<div class="col-lg-8 wow fadeInUp" data-wow-delay="0.3s">
					<div class="profile-card">
						<div class="profile-info">
							<h2>Doctor Profile Details</h2>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-user"></i>
								</div>
								<div class="info-content">
									<h5>Full Name</h5>
									<p>@Model.FullName (@Model.ExperienceYear Experience Years)</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-venus-mars"></i>
								</div>
								<div class="info-content">
									<h5>Gender</h5>
									<p>@Model.GetFullGender()</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-envelope"></i>
								</div>
								<div class="info-content">
									<h5>Email</h5>
									<p>@Model.Email</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-stethoscope"></i>
								</div>
								<div class="info-content">
									<h5>Specialization</h5>
									<p>@Model.DepartmentName</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-award"></i>
								</div>
								<div class="info-content">
									<h5>Doctor Level</h5>
									<p>@Model.Degree</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>



	<!-- JavaScript Libraries -->
	<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/lib/wow/wow.min.js"></script>
	<script src="/lib/easing/easing.min.js"></script>
	<script src="/lib/waypoints/waypoints.min.js"></script>
	<script src="/lib/counterup/counterup.min.js"></script>
	<script src="/lib/owlcarousel/owl.carousel.min.js"></script>
	<script src="/lib/tempusdominus/js/moment.min.js"></script>
	<script src="/lib/tempusdominus/js/moment-timezone.min.js"></script>
	<script src="/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

	<!-- Template Javascript -->
	<script src="/js/main.js"></script>
</body>

</html>