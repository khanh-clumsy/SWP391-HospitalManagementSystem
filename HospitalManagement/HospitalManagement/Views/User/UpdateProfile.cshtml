@model HospitalManagement.Models.Account
@{
	ViewData["Title"] = "Update Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<!-- Template Stylesheet -->
	<link href="/css/doctorprofile.css" rel="stylesheet">
</head>

<body>
	<!-- Profile Start -->
	<div class="container-xxl doctor-profile py-5">
		<div class="container">

			<div class="row mb-4">
				<div class="col-12">
					<a asp-controller="Patient" asp-action="ViewDoctors" class="back-to-list">
						<i class="fas fa-arrow-left"></i>
						Back to Doctor List
					</a>
				</div>
			</div>

			<div class="row g-4 align-items-stretch">
				<!-- Image and Upload Buttons -->
				<div class="left-content col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
					<div class="profile-card text-center">

						<!-- Ảnh hiện tại -->
						<div class="profile-image">
							<img src="@(Model.ProfileImagePath != null
									 ? $"data:image/png;base64,{Model.ProfileImagePath}"
									 : Url.Content("~/img/logo.jpg"))"
								 alt="Current Photo" class="shadow mb-2" />
						</div>

						<!-- Chọn file + nút Upload  -->
						<div class="profile-buttons">
							<div class="d-flex gap-2 justify-content-center flex-wrap">
									<div style="width: 240px; margin-bottom:30px">
				
										<form asp-action="UploadPhoto" asp-controller="User" method="post" enctype="multipart/form-data">
											<input type="file" class="form-control form-control-sm" name="photo" />
											<button type="submit" class="btn btn-primary btn-sm w-100 mt-2">Upload</button>
										</form>


									</div>
							</div>
						</div>


					</div>
				</div>


				<!-- Update Information -->
				<div class="col-lg-8 wow fadeInUp" data-wow-delay="0.3s">
					<div class="profile-card">
						<div class="profile-info">
							<h2> Update Details</h2>

							<form asp-action="UpdateProfile" asp-controller="User" method="post" enctype="multipart/form-data">
								<div class="form-group">
									<label>Full Name</label>
									<input asp-for="FullName" class="form-control" />
								</div>
								<div class="form-group">
									<label>Gender</label>
									<select asp-for="Gender" class="form-select">
										<option value="M">Male</option>
										<option value="F">Female</option>
										<option value="O">Other</option>
									</select>
								</div>
								<div class="form-group">
									<label>Phone</label>
									<input asp-for="PhoneNumber" class="form-control" />
								</div>
								<button type="submit" class="btn btn-dark mt-3 w-100">Save Changes</button>
							</form>
						</div>
					</div>
				</div>



			</div>
		</div>
	</div>


	<!-- JavaScript Libraries -->
	<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/lib/wow/wow.min.js"></script>
	<script src="/lib/easing/easing.min.js"></script>
	<script src="/lib/waypoints/waypoints.min.js"></script>
	<script src="/lib/counterup/counterup.min.js"></script>
	<script src="/lib/owlcarousel/owl.carousel.min.js"></script>
	<script src="/lib/tempusdominus/js/moment.min.js"></script>
	<script src="/lib/tempusdominus/js/moment-timezone.min.js"></script>
	<script src="/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

	<!-- Template Javascript -->
	<script src="/js/main.js"></script>
</body>

</html>