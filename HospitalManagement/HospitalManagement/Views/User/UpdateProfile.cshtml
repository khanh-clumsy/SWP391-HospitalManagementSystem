@{
	ViewData["Title"] = "Update Profile";
}

<!DOCTYPE html>
<html lang="en">

<body>

	<div class="container-login100">

		<div class="wrap-login100 p-5 bg-white rounded shadow">
			<div>
				<h3 class="text-center mb-4">Update Profile</h3>
			</div>
			<form>
				<!-- Ảnh hiện tại -->
				<div class="mb-3">
					<label class="form-label fw-bold">Current Photo:</label><br />
					<img src="~/img/team-1.jpg" alt="Current Photo"
						 class="shadow mb-2"
						 style="width: 140px; height: 180px; object-fit: cover;" />
				</div>

				<!-- Chọn file + nút Upload nhỏ gọn -->
				<div style="width: 240px; margin-bottom:30px">
					<div class="mb-2">
						<label for="photo" class="form-label fw-bold">Upload new photo:</label>
						<input type="file" class="form-control form-control-sm" id="photo" name="photo" />
					</div>
					<button type="submit" class="btn btn-sm btn-primary w-100">Upload</button>
				</div>
			</form>



			<form>
				<div class="form-group">
					<label>Full Name</label>
					<input class="form-control" value="John Doe" />
				</div>
				<div class="form-group">
					<label>Email</label>
					<input class="form-control" value="john@example.com" />
				</div>
				<div class="form-group">
					<label>Phone</label>
					<input class="form-control" value="0123456789" />
				</div>
				<button type="submit" class="btn btn-dark mt-3 w-100">Save Changes</button>
			</form>
		</div>
	</div>
	<!-- Back to Top -->
	<a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-circle back-to-top"><i class="bi bi-arrow-up"></i></a>


	<!-- JavaScript Libraries -->
	<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/lib/wow/wow.min.js"></script>
	<script src="/lib/easing/easing.min.js"></script>
	<script src="/lib/waypoints/waypoints.min.js"></script>
	<script src="/lib/counterup/counterup.min.js"></script>
	<script src="/lib/owlcarousel/owl.carousel.min.js"></script>
	<script src="/lib/tempusdominus/js/moment.min.js"></script>
	<script src="/lib/tempusdominus/js/moment-timezone.min.js"></script>
	<script src="/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

	<!-- Template Javascript -->
	<script src="/js/main.js"></script>
</body>

</html>