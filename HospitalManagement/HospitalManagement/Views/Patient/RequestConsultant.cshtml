        </div>
    </nav>
    <!-- Navbar End -->
    <!-- Page Header Start -->
    <div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Consultant</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb text-uppercase mb-0">
                    <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                    <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                    <li class="breadcrumb-item text-primary active" aria-current="page">Consultant</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header End -->
    <!-- Consultant Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-5">

                
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                    <p class="d-inline-block border rounded-pill py-1 px-4">Consultant</p>
                    <h1 class="mb-4">Request an consultant</h1>
                    <p class="mb-4">Submit your request for an online consultation and one of our doctors will review it shortly. Once your request is accepted, the doctor will contact you directly using the phone number you provided during registration. Please make sure your contact details are up to date.</p>
                    <div class="bg-light rounded d-flex align-items-center p-5 mb-4">
                        <div class="d-flex flex-shrink-0 align-items-center justify-content-center rounded-circle bg-white" style="width: 55px; height: 55px;">
                            <i class="fa fa-phone-alt text-primary"></i>
                        </div>
                        <div class="ms-4">
                            <p class="mb-2">Call Us Now</p>
                            <h5 class="mb-0">+012 345 6789</h5>
                        </div>
                    </div>
                    <div class="bg-light rounded d-flex align-items-center p-5">
                        <div class="d-flex flex-shrink-0 align-items-center justify-content-center rounded-circle bg-white" style="width: 55px; height: 55px;">
                            <i class="fa fa-envelope-open text-primary"></i>
                        </div>
                        <div class="ms-4">
                            <p class="mb-2">Mail Us Now</p>
                            <h5 class="mb-0">info@example.com</h5>
                        </div>
                    </div>
                </div>
                <!-- Form Request Consultant -->
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="bg-light rounded h-100 d-flex align-items-center p-5">
                        <form style="width: 100%;">
                            <div class="row g-3">
                                <!-- Name field - Full width -->
                                <div class="col-12">
                                    <input type="text" class="form-control" placeholder="Your Name" style="height: 55px;">
                                </div>

                                <!-- Email and SDT (Phone) on same row -->
                                <div class="col-12 col-sm-6">
                                    <input type="email" class="form-control" placeholder="Your email" style="height: 55px;">
                                </div>
                                <div class="col-12 col-sm-6">
                                    <input type="text" class="form-control" placeholder="Your mobile" style="height: 55px;">
                                </div>

                                <!-- Consultant Selection field - Full width -->
                                <div class="col-12">
                                    <select class="form-select" style="height: 55px;">
                                        <option value="" disabled selected>Choose Consultant</option>
                                        <option value="doctor">Doctor</option>
                                        <option value="department_head">Department Head</option>
                                    </select>
                                </div>


                                <!-- Radio buttons for Basic/Advance -->
                                <div class="col-12">
                                    <div class="d-flex align-items-center justify-content-between" style="height: 55px; border: 2px solid #ddd; border-radius: 4px; padding: 0 15px;">
                                        <label class="form-label mb-0 me-4" style="font-weight: 500;">Service:</label>

                                        <div class="d-flex align-items-center gap-4">
                                            <div class="form-check mb-0">
                                                <input class="form-check-input" type="radio" name="serviceLevel" id="basic" value="basic" checked>
                                                <label class="form-check-label" for="basic">
                                                    Basic
                                                </label>
                                            </div>
                                            <div class="form-check mb-0">
                                                <input class="form-check-input" type="radio" name="serviceLevel" id="advance" value="advance">
                                                <label class="form-check-label" for="advance">
                                                    Advanced
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Large text area -->
                                <div class="col-12">
                                    <textarea class="form-control" rows="8" placeholder="Describe your problem"></textarea>
                                </div>

                                <!-- Submit button -->
                                <div class="col-12">
                                    <button class="btn btn-primary w-100 py-3" type="submit">Book Appointment</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Appointment End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-circle back-to-top"><i class="bi bi-arrow-up"></i></a>


