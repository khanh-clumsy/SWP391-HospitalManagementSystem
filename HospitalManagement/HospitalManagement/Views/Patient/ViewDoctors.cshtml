@{
}
@model X.PagedList.IPagedList<HospitalManagement.Models.Doctor>
    @using Microsoft.AspNetCore.Http

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <style>
            .doctor-img-wrapper {
                aspect-ratio: 5 / 6;
                width: 100%; /* hoặc width: 250px; nếu muốn cố định */
                overflow: hidden;
                border-radius: 8px; /* tuỳ chọn làm bo góc đẹp hơn */
                position: relative;
            }

            .doctor-img {
                width: 100%;
                height: 100%;
                object-fit: cover; /* quan trọng: ảnh sẽ được cắt đúng tỷ lệ */
                display: block;
            }
        </style>
    </head>
    <body>


        <!-- Page Header Start -->
        <div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
            <div class="container py-5">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Doctors</h1>
                <nav aria-label="breadcrumb animated slideInDown">
                    <ol class="breadcrumb text-uppercase mb-0">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" class="text-white">Home</a></li>
                        <li class="breadcrumb-item text-primary active" aria-current="page">Doctors</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Page Header End -->
        <!-- Team Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="text-center mx-auto mb-4 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                    <p class="d-inline-block border rounded-pill py-1 px-4">Doctors</p>
                    <h1>Our Experience Doctors</h1>
                </div>

                <!-- Search & Filter Form -->
                <form method="get" asp-action="ViewDoctors" asp-controller="Patient">
                    <div class="row justify-content-center g-2 wow fadeInUp" data-wow-delay="0.2s">

                        <!-- Search by name -->
                        <div class="col-md-2">
                            <input type="text" name="name" class="form-control" placeholder="Name"
                                   value="@(ViewBag.Name ?? "")" />
                        </div>

                        <!-- Filter by Department -->
                        <div class="col-md-2">
                            <select class="form-select" name="department">
                                <option value="">Department</option>
                                @foreach (var dept in ViewBag.Departments as List<string>)
                                {
                                    if ((string)ViewBag.Department == dept)
                                    {
                                        <option value="@dept" selected>@dept</option>
                                    }
                                    else
                                    {
                                        <option value="@dept">@dept</option>
                                    }
                                }
                            </select>
                        </div>

                        <!-- Filter by Experience -->
                        <div class="col-md-2">
                            <select class="form-select" name="exp">
                                <option value="">Experience</option>
                                @if ((int?)ViewBag.Experience == 1)
                                {
                                    <option value="1" selected>1+ yrs</option>
                                }
                                else
                                {
                                    <option value="1">1+ yrs</option>
                                }
                                @for (int i = 5; i < 16; i = i + 5)
                                {
                                    if ((int?)ViewBag.Experience == i)
                                    {
                                        <option value="@i" selected>@($"{i}+ yrs")</option>
                                    }
                                    else
                                    {
                                        <option value="@i">@($"{i}+ yrs")</option>
                                    }
                                }
                            </select>
                        </div>

                        <!-- Filter by Type -->
                        <div class="col-md-2">
                            <select class="form-select" name="isHead">
                                <option value="">Type</option>
                                @if (ViewBag.Type == null)
                                {
                                    <option value="true">Department Head</option>
                                    <option value="false">Doctor</option>
                                }
                                else if (ViewBag.Type)
                                {
                                    <option value="true" selected>Department Head</option>
                                    <option value="false">Doctor</option>
                                }
                                else if (ViewBag.Type == false)
                                {
                                    <option value="true">Department Head</option>
                                    <option value="false" selected>Doctor</option>
                                }
                            </select>
                        </div>

                        <!-- Sort by Experience -->
                        <div class="col-md-2">
                            <select class="form-select" name="sort">
                                <option value="">Sort Exp</option>
                                @if ((string)ViewBag.Sort == "asc")
                                {
                                    <option value="asc" selected>Ascending</option>
                                }
                                else
                                {
                                    <option value="asc">Ascending</option>
                                }
                                @if ((string)ViewBag.Sort == "desc")
                                {
                                    <option value="desc" selected>Descending</option>
                                }
                                else
                                {
                                    <option value="desc">Descending</option>
                                }
                            </select>
                        </div>

                        <!-- Search Button -->
                        <div class="col-md-2 d-grid">
                            <button class="btn btn-primary" type="submit">Search</button>
                        </div>
                    </div>
                </form>

                <!-- Doctors -->
                <div class="row g-4 mt-4">
                    @foreach (var doctor in Model)
                    {
                        <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="team-item position-relative rounded overflow-hidden">
                                <div class="doctor-img-wrapper">
                                    <img src="@doctor.Account.ProfileImagePath" alt="Doctor Image" class="doctor-img" />
                                </div>
                                <div class="team-text bg-light text-center p-4">
                                    <h5>@doctor.Account.FullName</h5>
                                    <p class="text-primary">@doctor.DepartmentName (@doctor.ExperienceYear Exp Years)</p>
                                    <div class="d-flex justify-content-center gap-2 mt-4">
                                    <a asp-controller="Patient" method="get" asp-action="BookingAppointment" asp-route-doctorId="@doctor.DoctorId" class="btn btn-sm btn-outline-primary">Make an Appointment</a>
                                        <a href="/Patient/DoctorDetail/@doctor.DoctorId" class="btn btn-sm btn-outline-secondary d-flex align-items-center justify-content-center">Detail</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @{
                    int maxPagesToShow = 5;
                    int startPage = Model.PageNumber - maxPagesToShow / 2;
                    if (startPage < 1) startPage = 1;

                    int endPage = startPage + maxPagesToShow - 1;
                    if (endPage > Model.PageCount)
                    {
                        endPage = Model.PageCount;
                        startPage = Math.Max(1, endPage - maxPagesToShow + 1);
                    }
                }

                <div class="d-flex justify-content-center mt-5">
                    <nav>
                        <ul class="pagination">

                            @* Previous button *@
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link" href="@(Model.HasPreviousPage ? Url.Action("ViewDoctors", new {
											page = Model.PageNumber - 1,
											name = ViewBag.Name,
											department = ViewBag.Department,
											exp = ViewBag.Experience,
											isHead = ViewBag.Type,
											sort = ViewBag.Sort }) : "#")" tabindex="-1">Previous</a>
                            </li>

                            @* Trang đầu nếu startPage > 1 và dấu "..." *@
                            @if (startPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("ViewDoctors", new {
											page = 1,
											name = ViewBag.Name,
											department = ViewBag.Department,
											exp = ViewBag.Experience,
											isHead = ViewBag.Type,
											sort = ViewBag.Sort })">1</a>
                                </li>
                                @if (startPage > 2)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }
                            }

                            @* Các trang hiển thị trong khoảng từ startPage đến endPage *@
                            @for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("ViewDoctors", new {
											page = i,
											name = ViewBag.Name,
											department = ViewBag.Department,
											exp = ViewBag.Experience,
											isHead = ViewBag.Type,
											sort = ViewBag.Sort
											})">@i</a>
                                        </li>
                                    }

                            @* Trang cuối nếu endPage < total pages và dấu "..." *@
                            @if (endPage < Model.PageCount)
                            {
                                if (endPage < Model.PageCount - 1)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("ViewDoctors", new {
											page = Model.PageCount,
											name = ViewBag.Name,
											department = ViewBag.Department,
											exp = ViewBag.Experience,
											isHead = ViewBag.Type,
											sort = ViewBag.Sort })">@Model.PageCount</a>
                                        </li>
                                    }

                                    @* Next button *@
                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link" href="@(Model.HasNextPage ? Url.Action("ViewDoctors", new {
										page = Model.PageNumber + 1,
										name = ViewBag.Name,
										department = ViewBag.Department,
										exp = ViewBag.Experience,
										isHead = ViewBag.Type,
										sort = ViewBag.Sort}) : "#")">Next</a>
                            </li>

                        </ul>
                    </nav>
                </div>

            </div>
        </div>
        <!-- Team End -->
        

        <!-- JavaScript Libraries -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/lib/wow/wow.min.js"></script>
        <script src="/lib/easing/easing.min.js"></script>
        <script src="/lib/waypoints/waypoints.min.js"></script>
        <script src="/lib/counterup/counterup.min.js"></script>
        <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
        <script src="/lib/tempusdominus/js/moment.min.js"></script>
        <script src="/lib/tempusdominus/js/moment-timezone.min.js"></script>
        <script src="/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

        <!-- Template Javascript -->
        <script src="/js/main.js"></script>
    </body>

</html>
