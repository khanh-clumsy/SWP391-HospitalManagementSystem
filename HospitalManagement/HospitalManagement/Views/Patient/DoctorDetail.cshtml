@model HospitalManagement.Models.Doctor
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Template Stylesheet -->
    <link href="/css/doctorprofile.css" rel="stylesheet">
</head>
<body>


    <!-- Page Header Start -->
    <div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">DOCTOR PROFILE</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb text-uppercase mb-0">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" class="text-white">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="ViewDoctors" asp-controller="Patient" class="text-white">Doctors</a></li>
                    <li class="breadcrumb-item text-primary active" aria-current="page">Doctor Details</li>

                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header End -->
    <!-- Appointment Start -->
    <div class="container-xxl doctor-profile py-5">
        <div class="container">
            <div class="row mb-4">
                <div class="col-12">
                    <a asp-action="ViewDoctors" asp-controller="Patient" class="back-to-list">
                        <i class="fas fa-arrow-left"></i> Back to Doctor List
                    </a>
                </div>
            </div>

            <div class="row g-4 align-items-stretch">
                <!-- Doctor Image and Appointment Buttons -->
                <div class="left-content col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="profile-card text-center">
                        <div class="profile-image">
                            @* <img src="@Model.Account.ProfileImagePath" alt="Doctor's Photo"> *@
                        </div>
                        <div class="profile-buttons">
                            <div class="d-flex gap-2 justify-content-center flex-wrap">
                                <a href="#" class="btn btn-primary">Book Appointment</a>
                                <a href="#" class="btn btn-outline-primary">Online Consultant</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Doctor Information -->
                <div class="col-lg-8 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="profile-card">
                        <div class="profile-info">
                            <h2>Doctor Profile Details</h2>

                            <div class="info-item">
                                <div class="info-icon">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="info-content">
                                    <h5>Full Name</h5>
                                     <p>@Model.FullName (@Model.ExperienceYear Experience Years)</p> 
                                </div>
                            </div>

                            <div class="info-item">
                                <div class="info-icon">
                                    <i class="fas fa-venus-mars"></i>
                                </div>
                                <div class="info-content">
                                    <h5>Gender</h5>
                                     @* <p>@Model.GetFullGender()</p>  *@
                                </div>
                            </div>

                            <div class="info-item">
                                <div class="info-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <div class="info-content">
                                    <h5>Email</h5>
                                     <p>@Model.Email</p> 
                                </div>
                            </div>

                            <div class="info-item">
                                <div class="info-icon">
                                    <i class="fas fa-stethoscope"></i>
                                </div>
                                <div class="info-content">
                                    <h5>Specialization</h5>
                                    <p>@Model.DepartmentName</p>
                                </div>
                            </div>

                            <div class="info-item">
                                <div class="info-icon">
                                    <i class="fas fa-award"></i>
                                </div>
                                <div class="info-content">
                                    <h5>Doctor Level</h5>
                                    <p>@Model.Degree</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/counterup/counterup.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="/js/main.js"></script>
</body>

</html>