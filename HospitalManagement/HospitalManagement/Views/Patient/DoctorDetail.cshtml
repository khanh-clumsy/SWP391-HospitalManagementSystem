	<!-- Appointment Start -->
	<div class="container-xxl doctor-profile py-5">
		<div class="container">
			<div class="row mb-4">
				<div class="col-12">
					<a href="team.html" class="back-to-list"><i class="fas fa-arrow-left"></i> Back to Doctor List</a>
				</div>
			</div>

			<div class="row g-4 align-items-stretch">
				<!-- Doctor Image and Appointment Buttons -->
				<div class="left-content col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
					<div class="profile-card text-center">
						<div class="profile-image">
							<img src="/img/team-1.jpg" alt="Doctor's Photo">
						</div>
						<div class="profile-buttons">
							<div class="d-flex gap-2 justify-content-center flex-wrap">
								<a href="#" class="btn btn-primary">Book Appointment</a>
								<a href="#" class="btn btn-outline-primary">Online Consultant</a>
							</div>
						</div>
					</div>
				</div>

				<!-- Doctor Information -->
				<div class="col-lg-8 wow fadeInUp" data-wow-delay="0.3s">
					<div class="profile-card">
						<div class="profile-info">
							<h2>Doctor Profile Details</h2>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-user"></i>
								</div>
								<div class="info-content">
									<h5>Full Name</h5>
									<p>Dr. John Smith</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-venus-mars"></i>
								</div>
								<div class="info-content">
									<h5>Gender</h5>
									<p>Male</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-envelope"></i>
								</div>
								<div class="info-content">
									<h5>Email</h5>
									<p>dr.johnsmith@klinik.com</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-stethoscope"></i>
								</div>
								<div class="info-content">
									<h5>Specialization</h5>
									<p>Cardiology</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-award"></i>
								</div>
								<div class="info-content">
									<h5>Doctor Level</h5>
									<p>Senior Specialist</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


