@model HospitalManagement.Models.Patient
@{
	ViewData["Title"] = "View Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<!-- Template Stylesheet -->
	<link href="/css/doctorprofile.css" rel="stylesheet">
</head>


<body>
	<!-- Profile Start -->
	<div class="container-xxl doctor-profile py-5">
		<div class="container">

			<div class="row mb-4">
				<div class="col-12">
					<a asp-controller="Home" asp-action="Index" class="back-to-list">
						<i class="fas fa-arrow-left"></i>
						Back to Home Page
					</a>
				</div>
			</div>

			<div class="row g-4 align-items-stretch">
				<!-- Image -->
				<div class="left-content col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
					<div class="profile-card text-center">
						<!-- Ảnh hiện tại -->
						<div class="profile-image">
							<img src="@(Model.ProfileImage != null
									 ? $"data:image/png;base64,{Model.ProfileImage}"
									 : Url.Content("~/img/logo.jpg"))"
								 alt="Current Photo" class="shadow mb-2" />
						</div>
						<div class="profile-buttons">
							<div class="d-flex gap-2 justify-content-center flex-wrap">
								<a class="btn btn-primary flex-fill text-center" asp-controller="Patient" asp-action="UpdateProfile">Update Profile</a>
								<a class="btn btn-primary flex-fill text-center" asp-controller="Patient" asp-action="ChangePassword">Change Password</a>
								<a class="btn btn-outline-primary flex-fill text-center" asp-controller="Patient" asp-action="Logout">Logout</a>
							</div>
						</div>

					</div>
				</div>

				<!--  Information -->
				<div class="col-lg-8 wow fadeInUp" data-wow-delay="0.3s">
					<div class="profile-card">
						<div class="profile-info">
							<h2> Profile Details</h2>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-user"></i>
								</div>
								<div class="info-content">
									<h5>Full Name</h5>
									<p>@Model.FullName</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-venus-mars"></i>
								</div>
								<div class="info-content">
									<h5>Gender</h5>
									@if (!string.IsNullOrEmpty(Model.Gender))
									{
										if (Model.Gender[0] == 'M')
										{
											<p>Male</p>
										}
										else if (Model.Gender[0] == 'F')
										{
											<p>Female</p>
										}
										else
										{
											<p>Other</p>
										}
									}
									else
									{
										<p></p>
									}
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-phone"></i>
								</div>
								<div class="info-content">
									<h5>Phone</h5>
									<p>@Model.PhoneNumber</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-calendar-alt"></i>
								</div>
								<div class="info-content">
									<h5>Date of Birth</h5>
									<p>@Model.Dob?.ToString("dd/MM/yyyy")</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-map-marker-alt"></i>
								</div>
								<div class="info-content">
									<h5>Address</h5>
									<p>@Model.Address</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-id-card"></i>
								</div>
								<div class="info-content">
									<h5>Health Insurance</h5>
									<p>@Model.HealthInsurance</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-tint"></i>
								</div>
								<div class="info-content">
									<h5>Blood Group</h5>
									<p>@Model.BloodGroup</p>
								</div>
							</div>

							@* <div class="info-item"> *@
							@* 	<div class="info-icon"> *@
							@* 		<i class="fas fa-check-circle"></i> *@
							@* 	</div> *@
							@* 	<div class="info-content"> *@
							@* 		<h5>Status</h5> *@
							@* 		<p>@(Model.IsActive ? "Active" : "Inactive")</p> *@
							@* 	</div> *@
							@* </div> *@

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>



	<!-- JavaScript Libraries -->
	<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/lib/wow/wow.min.js"></script>
	<script src="/lib/easing/easing.min.js"></script>
	<script src="/lib/waypoints/waypoints.min.js"></script>
	<script src="/lib/counterup/counterup.min.js"></script>
	<script src="/lib/owlcarousel/owl.carousel.min.js"></script>
	<script src="/lib/tempusdominus/js/moment.min.js"></script>
	<script src="/lib/tempusdominus/js/moment-timezone.min.js"></script>
	<script src="/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

	<!-- Template Javascript -->
	<script src="/js/main.js"></script>
</body>

</html>