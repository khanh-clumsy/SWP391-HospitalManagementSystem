@{
    ViewData["Title"] = "Chọn Cách Đặt Lịch";
}

<div class="container-xxl py-5">
    <div class="container text-center">
        <h2><i class="fas fa-calendar-alt text-primary me-2"></i>Đặt Lịch Khám</h2>
        <p>Vui lòng chọn cách đặt lịch phù hợp với bạn:</p>
        <div class="row g-4">
            <div class="col-md-6">
                <a href="@Url.Action("BookingByService", "Appointment")" class="btn btn-primary btn-lg w-100 py-4">
                    <i class="fas fa-briefcase-medical me-2"></i>Đặt Theo Gói Khám
                </a>
                <p class="mt-2 text-muted">Chọn dịch vụ, gói khám trước.</p>
            </div>
            <div class="col-md-6">
                <a href="@Url.Action("BookingByDoctor", "Appointment")" class="btn btn-primary btn-lg w-100 py-4">
                    <i class="fas fa-stethoscope me-2"></i>Đặt Theo Bác Sĩ
                </a>
                <p class="mt-2 text-muted">Chọn bác sĩ trước, xem lịch tuần và đặt lịch.</p>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/booking.css" />
}