@model Appointment
@{
    ViewData["Title"] = "Appointment Details";
}

<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Appointment Details</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb text-uppercase mb-0">
                <li class="breadcrumb-item"><a class="text-white" href="/">Home</a></li>
                <li class="breadcrumb-item"><a class="text-white" href="/Appointment">Appointments</a></li>
                <li class="breadcrumb-item text-primary active" aria-current="page">Details</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Appointment Details Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5 justify-content-center">
            <div class="col-lg-10 wow fadeInUp" data-wow-delay="0.1s">
                <div class="bg-light rounded p-5">
                    <div class="row mb-4">
                        <div class="col-12">
                            <p class="d-inline-block border rounded-pill py-1 px-4 text-primary">Appointment Information</p>
                            <h2 class="mb-4">Appointment #@Model.AppointmentId</h2>
                        </div>
                    </div>

                    <!-- Patient & Doctor Information -->
                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="bg-white rounded p-4 h-100">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="d-flex flex-shrink-0 align-items-center justify-content-center rounded-circle bg-primary" style="width: 45px; height: 45px;">
                                        <i class="fa fa-user text-white"></i>
                                    </div>
                                    <div class="ms-3">
                                        <h5 class="mb-1">Patient Information</h5>
                                        <p class="mb-0 text-muted">@Model.Patient?.FullName</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="bg-white rounded p-4 h-100">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="d-flex flex-shrink-0 align-items-center justify-content-center rounded-circle bg-primary" style="width: 45px; height: 45px;">
                                        <i class="fa fa-user-md text-white"></i>
                                    </div>
                                    <div class="ms-3">
                                        <h5 class="mb-1">Doctor</h5>
                                        <p class="mb-0 text-muted">@Model.Doctor?.FullName</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Appointment Schedule -->
                    <div class="row g-4 mb-4">
                        <div class="col-md-4">
                            <div class="bg-white rounded p-4 text-center h-100">
                                <div class="d-flex flex-shrink-0 align-items-center justify-content-center rounded-circle bg-primary mx-auto mb-3" style="width: 45px; height: 45px;">
                                    <i class="fa fa-calendar text-white"></i>
                                </div>
                                <h6 class="mb-1">Date</h6>
                                <p class="mb-0 text-muted">@Model.Date.ToShortDateString()</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="bg-white rounded p-4 text-center h-100">
                                <div class="d-flex flex-shrink-0 align-items-center justify-content-center rounded-circle bg-primary mx-auto mb-3" style="width: 45px; height: 45px;">
                                    <i class="fa fa-clock text-white"></i>
                                </div>
                                <h6 class="mb-1">Time</h6>
                                <p class="mb-0 text-muted">@Model.Slot?.StartTime - @Model.Slot?.EndTime</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="bg-white rounded p-4 text-center h-100">
                                <div class="d-flex flex-shrink-0 align-items-center justify-content-center rounded-circle bg-primary mx-auto mb-3" style="width: 45px; height: 45px;">
                                    <i class="fa fa-info-circle text-white"></i>
                                </div>
                                <h6 class="mb-1">Status</h6>
                                <span class="badge bg-@(Model.Status == "Confirmed" ? "success" : Model.Status == "Pending" ? "warning" : "secondary") text-white">@Model.Status</span>
                            </div>
                        </div>
                    </div>
