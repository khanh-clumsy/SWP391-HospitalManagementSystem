@model HospitalManagement.Models.Tracking

<div class="modal-header">
    <h5 class="modal-title">Thông tin phòng</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
</div>
<div class="modal-body">
    <p><strong>Bệnh nhân:</strong> @Model.Appointment.Patient.FullName</p>
    <p><strong>Phòng cần đến:</strong> @Model.Room?.RoomName</p>
    <p><strong>Thời gian:</strong> @Model.Time</p>
</div>
<!-- jQuery (chỉ cần nếu dùng Bootstrap 4 hoặc thấp hơn) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
