@model List<HospitalManagement.ViewModels.RoomWithTestCountViewModel>

@if (!Model.Any())
{
    <div class="text-center text-muted mt-4">
        <p>Không có phòng nào phù hợp.</p>
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var room in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title text-primary mb-2">@room.RoomName</h5>
                        <p class="text-muted mb-3">
                            <i class="fas fa-vials me-1"></i>
                            @room.TestCount test đang chờ
                        </p>
                        <button type="button"
                                class="btn btn-outline-primary btn-sm w-100 assign-room-btn"
                                data-room-id="@room.RoomId">
                            <i class="fas fa-plus me-1"></i>Chọn phòng
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}