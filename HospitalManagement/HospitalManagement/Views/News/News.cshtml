@model X.PagedList.IPagedList<HospitalManagement.ViewModels.NewsViewModel>

@{
	ViewData["Title"] = "Trang Tin Tức";
}

<div class="container-fluid px-4 py-5">
	<div class="row justify-content-center">
		<div class="col-lg-10 col-xl-8">
			<!-- Header Section -->
			<div class="text-center mb-5">
				<h1 class="display-4 fw-bold text-primary mb-3">
					<i class="fas fa-newspaper me-3"></i>Tin Tức Mới Nhất
				</h1>
				<p class="lead text-muted">Cập nhật thông tin y tế và hoạt động bệnh viện</p>
				<hr class="w-25 mx-auto border-primary border-3">
			</div>

			@if (Model != null && Model.Any())
			{
				<div class="row g-4">
					@foreach (var item in Model)
					{
						<div class="col-12">
							<article class="card shadow-sm border-0 h-100 news-card">
								<div class="row g-0 h-100 flex-md-row flex-column">
									<!-- Thumbnail -->
									<div class="col-md-4 col-lg-3">
										<div class="news-thumbnail">
											<img src="@(string.IsNullOrEmpty(item.Thumbnail)
												 ? Url.Content("~/img/logo.jpg")
												 : Url.Content("~/img/" + item.Thumbnail))"
												 alt="@item.Title"
												 class="news-image" />
										</div>
									</div>

									<!-- Content -->
									<div class="col-md-8 col-lg-9">
										<div class="card-body p-4 h-100 d-flex flex-column">
											<div class="d-flex flex-wrap align-items-start justify-content-between mb-3">
												<h2 class="card-title h4 fw-bold text-dark mb-2 flex-grow-1">@item.Title</h2>
												<span class="badge bg-primary-subtle text-primary px-3 py-2 rounded-pill">
													<i class="far fa-clock me-1"></i>@item.CreatedAt.ToString("dd/MM/yyyy")
												</span>
											</div>

											<div class="d-flex flex-wrap align-items-center gap-3 mb-3 text-muted small">
												<div class="d-flex align-items-center">
													<i class="fas fa-user-md me-2 text-primary"></i>
													<span><strong>@item.AuthorName</strong></span>
												</div>
												<div class="d-flex align-items-center">
													<i class="far fa-calendar-alt me-2 text-primary"></i>
													<span>@item.CreatedAt.ToString("HH:mm - dd/MM/yyyy")</span>
												</div>
											</div>

											<div class="card-text mb-4 flex-grow-1">
												<p class="text-muted mb-0 lh-lg">
													@(item.Description ?? "Nội dung đang được cập nhật...")
												</p>
											</div>

											<div class="d-flex justify-content-between align-items-center mt-auto flex-wrap gap-2">
												<a asp-action="Detail" asp-route-id="@item.NewsId"
												   class="btn btn-primary btn-lg px-4 py-2 rounded-pill shadow-sm">
													<i class="fas fa-arrow-right me-2"></i>Xem chi tiết
												</a>
												<div class="text-muted small">
													<i class="fas fa-eye me-1"></i>Bài viết #@item.NewsId
												</div>
											</div>
										</div>
									</div>
								</div>
							</article>
						</div>
					}
				</div>
			}
		</div>
	</div>
</div>

<style>
	.news-card {
		transition: all 0.3s ease;
		border-left: 4px solid transparent;
		overflow: hidden;
	}

		.news-card:hover {
			transform: translateY(-2px);
			box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
			border-left-color: var(--bs-primary);
		}

	.news-thumbnail {
		height: 200px;
		overflow: hidden;
		display: flex;
		align-items: center;
		justify-content: center;
		background: #f8f9fa;
	}

	.news-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
		transition: transform 0.3s ease;
	}

	.news-card:hover .news-image {
		transform: scale(1.05);
	}

	.btn-primary {
		transition: all 0.3s ease;
	}

		.btn-primary:hover {
			transform: translateY(-1px);
			box-shadow: 0 4px 15px rgba(var(--bs-primary-rgb), 0.3);
		}

	.badge {
		font-size: 0.75rem;
		font-weight: 500;
	}

	.display-4 {
		font-weight: 700;
	}

	@@media (max-width: 768px) {
		.display-4 {
			font-size: 2rem;
		}

		.news-thumbnail {
			height: 150px;
		}

		.card-body {
			padding: 1.5rem !important;
		}

		.d-flex.justify-content-between {
			flex-direction: column;
			gap: 1rem;
		}

		.col-md-4 {
			order: 1;
		}

		.col-md-8 {
			order: 2;
		}
	}

	@@media (max-width: 576px) {
		.news-thumbnail {
			height: 120px;
		}

		.h4 {
			font-size: 1.1rem;
		}

		.btn-lg {
			padding: 0.5rem 1.5rem !important;
			font-size: 0.9rem;
		}
	}
</style>