<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News - Klinik</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --card-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            --hover-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .hero-section {
            background: var(--primary-gradient);
            position: relative;
            overflow: hidden;
            padding: 80px 0;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.05"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.05"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
            }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
            animation: fadeInUp 1s ease-out;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
            animation: fadeInUp 1s ease-out 0.2s both;
        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .search-container {
            background: white;
            border-radius: 50px;
            padding: 8px;
            box-shadow: var(--card-shadow);
            transition: all 0.3s ease;
            margin-top: -30px;
            position: relative;
            z-index: 3;
        }

            .search-container:focus-within {
                transform: translateY(-2px);
                box-shadow: var(--hover-shadow);
            }

        .search-input {
            border: none;
            background: transparent;
            padding: 15px 25px;
            font-size: 1.1rem;
            outline: none;
            width: 100%;
        }

        .search-btn {
            background: var(--primary-gradient);
            border: none;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

            .search-btn:hover {
                transform: scale(1.05);
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
            }

        .news-card {
            border: none;
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
            box-shadow: var(--card-shadow);
            background: white;
            position: relative;
        }

            .news-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: var(--primary-gradient);
                transform: scaleX(0);
                transition: transform 0.3s ease;
            }

            .news-card:hover::before {
                transform: scaleX(1);
            }

            .news-card:hover {
                transform: translateY(-10px) scale(1.02);
                box-shadow: var(--hover-shadow);
            }

        .news-image {
            height: 220px;
            object-fit: cover;
            width: 100%;
            transition: transform 0.4s ease;
        }

        .news-card:hover .news-image {
            transform: scale(1.05);
        }

        .card-body {
            padding: 25px;
            position: relative;
        }

        .card-title {
            font-size: 1.3rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 15px;
            line-height: 1.4;
        }

        .card-text {
            color: #666;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .card-footer {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-top: none;
            padding: 15px 25px;
            font-size: 0.9rem;
        }

        .author-badge {
            display: inline-flex;
            align-items: center;
            background: var(--primary-gradient);
            color: white;
            padding: 4px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .date-badge {
            color: #666;
            font-size: 0.85rem;
        }

        .pagination .page-link {
            border: none;
            color: #667eea;
            padding: 12px 18px;
            margin: 0 5px;
            border-radius: 10px;
            transition: all 0.3s ease;
            font-weight: 500;
        }

            .pagination .page-link:hover {
                background: var(--primary-gradient);
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
            }

        .pagination .page-item.active .page-link {
            background: var(--primary-gradient);
            border: none;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

        .no-results {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

            .no-results i {
                font-size: 4rem;
                color: #ddd;
                margin-bottom: 20px;
            }

        .filter-tags {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            margin-bottom: 30px;
            justify-content: center;
        }

        .filter-tag {
            background: white;
            border: 2px solid #e9ecef;
            padding: 8px 16px;
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 0.9rem;
            font-weight: 500;
        }

            .filter-tag:hover, .filter-tag.active {
                background: var(--primary-gradient);
                color: white;
                border-color: transparent;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
            }

        .stats-section {
            background: white;
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 40px;
            box-shadow: var(--card-shadow);
        }

        .stat-item {
            text-align: center;
            padding: 20px;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .stat-label {
            color: #666;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 5px;
        }

        @@media (max-width: 768px) {
            .hero-title

        {
            font-size: 2.5rem;
        }

        .search-container {
            margin: 20px;
        }

        .filter-tags {
            justify-content: flex-start;
            overflow-x: auto;
            padding-bottom: 10px;
        }

        }

        .loading-spinner {
            display: none;
            text-align: center;
            padding: 40px;
        }

        .spinner {
            width: 40px;
            height: 40px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid #667eea;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }

        @@keyframes spin {
            0%

        {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }

        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container hero-content">
            <div class="text-center text-white">
                <h1 class="hero-title">
                    <i class="fas fa-newspaper me-3"></i>Latest News
                </h1>
                <p class="hero-subtitle">Stay informed with our latest updates, announcements, and healthcare insights</p>
            </div>
        </div>
    </div>

    <!-- Search Section -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="search-container d-flex align-items-center">
                    <input type="text" class="search-input" id="searchInput" placeholder="Search for news, updates, announcements..." autocomplete="off">
                    <button class="search-btn" onclick="searchNews()">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Section -->
    <div class="container mt-5">
        <div class="stats-section">
            <div class="row">
                <div class="col-md-4 stat-item">
                    <div class="stat-number" id="totalNews">0</div>
                    <div class="stat-label">Total Articles</div>
                </div>
                <div class="col-md-4 stat-item">
                    <div class="stat-number" id="thisMonth">0</div>
                    <div class="stat-label">This Month</div>
                </div>
                <div class="col-md-4 stat-item">
                    <div class="stat-number" id="categories">0</div>
                    <div class="stat-label">Categories</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Tags -->
    <div class="container">
        <div class="filter-tags" id="filterTags">
            <div class="filter-tag active" onclick="filterByCategory('all')">All News</div>
            <div class="filter-tag" onclick="filterByCategory('announcements')">Announcements</div>
            <div class="filter-tag" onclick="filterByCategory('services')">Services</div>
            <div class="filter-tag" onclick="filterByCategory('health')">Health Tips</div>
            <div class="filter-tag" onclick="filterByCategory('events')">Events</div>
        </div>
    </div>

    <!-- Loading Spinner -->
    <div class="loading-spinner" id="loadingSpinner">
        <div class="spinner"></div>
        <p>Loading news articles...</p>
    </div>

    <!-- News List -->
    <div class="container">
        <div class="row" id="newsList">
            <!-- News cards will be inserted here -->
        </div>

        <!-- No Results -->
        <div class="no-results d-none" id="noResults">
            <i class="fas fa-search"></i>
            <h3>No articles found</h3>
            <p>Try adjusting your search terms or browse all articles</p>
        </div>

    </div>
      <script>
        // Enhanced dummy data with categories
        const dummyNews = [
            {
                id: 1,
                title: "New Cardiology Department Opens",
                content: "We're excited to announce the opening of our state-of-the-art cardiology department with advanced diagnostic equipment and expert specialists...",
                imageUrl: "https://images.unsplash.com/photo-1559757148-5c350d0d3c56?w=600&h=400&fit=crop",
                createdBy: "Dr. Sarah Johnson",
                createdAt: "2025-06-07",
                category: "announcements"
            },
            {
                id: 2,
                title: "Holiday Schedule Update",
                content: "Please take note of our modified operating hours during the upcoming holiday season. Emergency services remain available 24/7...",
                imageUrl: "https://images.unsplash.com/photo-1584820927498-cfe5211fd8bf?w=600&h=400&fit=crop",
                createdBy: "Admin Team",
                createdAt: "2025-06-05",
                category: "announcements"
            },
            {
                id: 3,
                title: "Telemedicine Services Now Available",
                content: "Access healthcare from the comfort of your home with our new telemedicine platform. Book virtual consultations with our specialists...",
                imageUrl: "https://images.unsplash.com/photo-1576091160399-112ba8d25d1f?w=600&h=400&fit=crop",
                createdBy: "Dr. Michael Chen",
                createdAt: "2025-06-03",
                category: "services"
            },
            {
                id: 4,
                title: "5 Tips for Better Sleep",
                content: "Quality sleep is essential for good health. Here are expert-recommended strategies to improve your sleep quality and overall well-being...",
                imageUrl: "https://images.unsplash.com/photo-1541781774459-bb2af2f05b55?w=600&h=400&fit=crop",
                createdBy: "Dr. Emily Davis",
                createdAt: "2025-06-01",
                category: "health"
            },
            {
                id: 5,
                title: "Free Health Screening Event",
                content: "Join us for our monthly community health screening event. Free blood pressure, cholesterol, and diabetes checks for all attendees...",
                imageUrl: "https://images.unsplash.com/photo-1582750433449-648ed127bb54?w=600&h=400&fit=crop",
                createdBy: "Community Team",
                createdAt: "2025-05-28",
                category: "events"
            },
            {
                id: 6,
                title: "Advanced Imaging Center Launch",
                content: "Our new imaging center features the latest MRI and CT scan technology, providing faster and more accurate diagnostic results...",
                imageUrl: "https://images.unsplash.com/photo-1551190822-a9333d879b1f?w=600&h=400&fit=crop",
                createdBy: "Dr. Robert Kim",
                createdAt: "2025-05-25",
                category: "services"
            }
        ];

        let currentFilter = 'all';
        let currentPage = 1;
        const itemsPerPage = 6;
        let filteredNews = [...dummyNews];

        function updateStats() {
            document.getElementById('totalNews').textContent = dummyNews.length;
            
            const currentMonth = new Date().getMonth();
            const thisMonthCount = dummyNews.filter(news => {
                const newsMonth = new Date(news.createdAt).getMonth();
                return newsMonth === currentMonth;
            }).length;
            document.getElementById('thisMonth').textContent = thisMonthCount;
            
            const categories = [...new Set(dummyNews.map(news => news.category))];
            document.getElementById('categories').textContent = categories.length;
        }

        function showLoading(show = true) {
            const spinner = document.getElementById('loadingSpinner');
            const newsList = document.getElementById('newsList');
            
            if (show) {
                spinner.style.display = 'block';
                newsList.style.opacity = '0.5';
            } else {
                spinner.style.display = 'none';
                newsList.style.opacity = '1';
            }
        }

        function loadNews(newsData, page = 1) {
            showLoading(true);
            
            setTimeout(() => {
                const list = document.getElementById("newsList");
                const noResults = document.getElementById("noResults");
                
                if (newsData.length === 0) {
                    list.innerHTML = "";
                    noResults.classList.remove("d-none");
                    showLoading(false);
                    return;
                } else {
                    noResults.classList.add("d-none");
                }

                const startIndex = (page - 1) * itemsPerPage;
                const endIndex = startIndex + itemsPerPage;
                const pageData = newsData.slice(startIndex, endIndex);

                list.innerHTML = "";
                
                pageData.forEach((news, index) => {
                    const card = document.createElement("div");
                    card.className = "col-md-6 col-lg-4 mb-4";
                    card.style.animationDelay = `${index * 0.1}s`;
                    card.innerHTML = `
                        <div class="card news-card h-100">
                            <img src="${news.imageUrl}" class="news-image" alt="${news.title}" loading="lazy">
                            <div class="card-body">
                                <h5 class="card-title">${news.title}</h5>
                                <p class="card-text">${news.content.slice(0, 120)}...</p>
                            </div>
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <span class="author-badge">
                                    <i class="fas fa-user-md me-1"></i>
                                    ${news.createdBy}
                                </span>
                                <span class="date-badge">
                                    <i class="fas fa-calendar me-1"></i>
                                    ${formatDate(news.createdAt)}
                                </span>
                            </div>
                        </div>
                    `;
                    list.appendChild(card);
                });

                updatePagination(newsData.length, page);
                showLoading(false);
            }, 500);
        }

        function formatDate(dateString) {
            const options = { year: 'numeric', month: 'short', day: 'numeric' };
            return new Date(dateString).toLocaleDateString('en-US', options);
        }

        function updatePagination(totalItems, currentPage) {
            const totalPages = Math.ceil(totalItems / itemsPerPage);
            const pagination = document.getElementById("pagination");
            
            if (totalPages <= 1) {
                pagination.innerHTML = "";
                return;
            }

            let paginationHTML = "";
            
            // Previous button
            if (currentPage > 1) {
                paginationHTML += `<li class="page-item"><a class="page-link" href="#" onclick="changePage(${currentPage - 1})"><i class="fas fa-chevron-left"></i></a></li>`;
            }

            // Page numbers
            for (let i = 1; i <= totalPages; i++) {
                if (i === currentPage) {
                    paginationHTML += `<li class="page-item active"><a class="page-link" href="#">${i}</a></li>`;
                } else if (i <= 2 || i >= totalPages - 1 || Math.abs(i - currentPage) <= 1) {
                    paginationHTML += `<li class="page-item"><a class="page-link" href="#" onclick="changePage(${i})">${i}</a></li>`;
                } else if (i === 3 && currentPage > 4) {
                    paginationHTML += `<li class="page-item disabled"><a class="page-link" href="#">...</a></li>`;
                } else if (i === totalPages - 2 && currentPage < totalPages - 3) {
                    paginationHTML += `<li class="page-item disabled"><a class="page-link" href="#">...</a></li>`;
                }
            }

            // Next button
            if (currentPage < totalPages) {
                paginationHTML += `<li class="page-item"><a class="page-link" href="#" onclick="changePage(${currentPage + 1})"><i class="fas fa-chevron-right"></i></a></li>`;
            }

            pagination.innerHTML = paginationHTML;
        }

        function changePage(page) {
            currentPage = page;
            loadNews(filteredNews, page);
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function searchNews() {
            const query = document.getElementById("searchInput").value.toLowerCase().trim();
            
            if (query === "") {
                filteredNews = currentFilter === 'all' ? [...dummyNews] : dummyNews.filter(n => n.category === currentFilter);
            } else {
                const baseFilter = currentFilter === 'all' ? dummyNews : dummyNews.filter(n => n.category === currentFilter);
                filteredNews = baseFilter.filter(n => 
                    n.title.toLowerCase().includes(query) || 
                    n.content.toLowerCase().includes(query) ||
                    n.createdBy.toLowerCase().includes(query)
                );
            }
            
            currentPage = 1;
            loadNews(filteredNews, 1);
        }

        function filterByCategory(category) {
            // Update active filter tag
            document.querySelectorAll('.filter-tag').forEach(tag => tag.classList.remove('active'));
            event.target.classList.add('active');
            
            currentFilter = category;
            currentPage = 1;
            
            if (category === 'all') {
                filteredNews = [...dummyNews];
            } else {
                filteredNews = dummyNews.filter(n => n.category === category);
            }
            
            // Apply search if there's a query
            const query = document.getElementById("searchInput").value.toLowerCase().trim();
            if (query !== "") {
                filteredNews = filteredNews.filter(n => 
                    n.title.toLowerCase().includes(query) || 
                    n.content.toLowerCase().includes(query) ||
                    n.createdBy.toLowerCase().includes(query)
                );
            }
            
            loadNews(filteredNews, 1);
        }

        // Search on Enter key
        document.getElementById("searchInput").addEventListener("keypress", function(event) {
            if (event.key === "Enter") {
                searchNews();
            }
        });

        // Real-time search (debounced)
        let searchTimeout;
        document.getElementById("searchInput").addEventListener("input", function() {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(searchNews, 300);
        });

        // Initialize page
        document.addEventListener("DOMContentLoaded", function() {
            updateStats();
            loadNews(dummyNews);
        });
    </script>
</body>
</html>