@model List<HospitalManagement.ViewModels.TestPatientViewModel>

<h2>Danh sách bệnh nhân cần thực hiện xét nghiệm</h2>
@if (Model.Count == 0)
{
    <p>Không có bệnh nhân nào.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tên bệnh nhân</th>
                <th>Tên xét nghiệm</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PatientName</td>
                    <td>@item.TestName</td>
                    <td>
                        <a asp-action="TestInput"
                           asp-route-testListId="@item.TestListId"
                           class="btn btn-primary">
                            Bắt đầu test
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
