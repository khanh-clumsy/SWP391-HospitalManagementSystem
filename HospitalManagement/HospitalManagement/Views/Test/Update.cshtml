@model HospitalManagement.Models.Test

@{
    ViewBag.Title = "Chỉnh sửa xét nghiệm";
    if (!User.IsInRole("Admin"))
    {
        <text>Bạn không có quyền truy cập trang này.</text>
        return;
    }
}

<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Chỉnh sửa xét nghiệm</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb text-uppercase mb-0">
                <li class="breadcrumb-item"><a class="text-white" href="/">Trang chủ</a></li>
                <li class="breadcrumb-item text-primary active" aria-current="page">Chỉnh sửa xét nghiệm</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container-xxl py-5">
    <div class="container">
        <h2 class="text-primary mb-4">Cập nhật thông tin xét nghiệm</h2>

        <form asp-action="Update" method="post" class="row g-3">
            <input type="hidden" asp-for="TestId" />

            <div class="col-md-6">
                <label asp-for="Name" class="form-label">Tên xét nghiệm <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên xét nghiệm..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Description" class="form-label">Mô tả</label>
                <input asp-for="Description" class="form-control" placeholder="Nhập mô tả xét nghiệm..." />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Price" class="form-label">Giá tiền <span class="text-danger">*</span></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" placeholder="Nhập giá tiền..." />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="RoomType" class="form-label">Loại phòng <span class="text-danger">*</span></label>
                <select asp-for="RoomType" asp-items="ViewBag.RoomTypes" class="form-select">
                </select>
                <span asp-validation-for="RoomType" class="text-danger"></span>
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Cập nhật
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>Hủy
                </a>
            </div>
        </form>
    </div>
</div>
