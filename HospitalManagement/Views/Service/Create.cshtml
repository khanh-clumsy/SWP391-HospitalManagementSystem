@model HospitalManagement.Models.Service
@{
    ViewBag.Title = "Thêm dịch vụ mới";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Package/CreatePackage.css">
    <style>
        #loadingOverlay {
            display: none !important;
        }
    </style>
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-primary mb-4">Thêm dịch vụ mới</h2>
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label for="ServiceType" class="form-label">Tên dịch vụ</label>
                    <input asp-for="ServiceType" class="form-control" required />
                    <span asp-validation-for="ServiceType" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="ServicePrice" class="form-label">Giá dịch vụ</label>
                    <input asp-for="ServicePrice" class="form-control" type="number" min="0" step="0.01" required />
                    <span asp-validation-for="ServicePrice" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    <button type="submit" class="btn btn-success">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div> 