@model HospitalManagement.Models.Doctor
<!DOCTYPE html>
<html lang="en">
<head>
	<!-- Template Stylesheet -->
	<link href="/css/doctorprofile.css" rel="stylesheet"> 
</head>
<body>


	<!-- Page Header Start -->
	<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
		<div class="container py-5">
			<h1 class="display-3 text-white mb-3 animated slideInDown">Thông tin chi tiết</h1>
			<nav aria-label="breadcrumb animated slideInDown">
				<ol class="breadcrumb text-uppercase mb-0">
					<li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" class="text-white">Trang chủ</a></li>
					<li class="breadcrumb-item"><a asp-action="ViewDoctors" asp-controller="Home" class="text-white">Bác si</a></li>
					<li class="breadcrumb-item text-primary active" aria-current="page">Thông tin chi tiết</li>

				</ol>
			</nav>
		</div>
	</div>
	<!-- Page Header End -->
	<div class="container-xxl doctor-profile py-5">
		<div class="container">
			<div class="row mb-4">
				<div class="col-12">
					<a asp-action="ViewDoctors" asp-controller="Home" class="back-to-list">
						<i class="fas fa-arrow-left"></i> Trở về danh sách bác sĩ
					</a>
				</div>
			</div>

			<div class="row g-4 align-items-stretch">
				<!-- Doctor Image and Appointment Buttons -->
				<div class="left-content col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
					<div class="profile-card text-center">
						<div class="profile-image">
							<img src="@(string.IsNullOrEmpty(Model.ProfileImage)
										? Url.Content("~/img/logo.jpg")
										: Url.Content("~/img/" + Model.ProfileImage))" alt="Doctor's Photo">
						</div>
						<div class="profile-buttons">
							<div class="d-flex gap-2 justify-content-center flex-wrap">
								<a href="#" class="btn btn-primary">Tạo cuộc hẹn</a>
							</div>
						</div>
					</div>
				</div>

				<!-- Doctor Information -->
				<div class="col-lg-8 wow fadeInUp" data-wow-delay="0.3s">
					<div class="profile-card">
						<div class="profile-info">
							<h2>Thông tin chi tiết</h2>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-user"></i>
								</div>
								<div class="info-content">
									<h5>Tên</h5>
									<p>@Model.FullName (@Model.ExperienceYear Experience Years)</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-venus-mars"></i>
								</div>
								<div class="info-content">
									<h5>Gender</h5>
									<p>@Model.GetFullGender()</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-envelope"></i>
								</div>
								<div class="info-content">
									<h5>Email</h5>
									<p>@Model.Email</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-stethoscope"></i>
								</div>
								<div class="info-content">
									<h5>Khoa</h5>
									<p>@Model.DepartmentName</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<i class="fas fa-award"></i>
								</div>
								<div class="info-content">
									<h5>Bằng cấp</h5>
									<p>@Model.Degree</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


	<!-- Back to Top -->
	<a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-circle back-to-top">
		<i class="bi bi-arrow-up"></i>
	</a>



</body>

</html>