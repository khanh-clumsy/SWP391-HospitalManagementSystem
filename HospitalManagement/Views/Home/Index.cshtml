@{
	ViewData["Title"] = "Trang Chủ";
	int doctors = ViewBag.OtherCount;
	int testdoctors = ViewBag.XetNghiemCount;
	int patientCount = ViewBag.PatientCount;
	var feedbacks = ViewBag.SpecialFeedbacks as List<HospitalManagement.Models.Feedback>;
}

@if (ViewBag.PatientCurrentRoom != null)
{
	<div class="alert alert-info text-center fw-bold" style="font-size:1.2rem; margin: 0">
		@if (@ViewBag.PatientCurrentRoom != "")
		{
			@ViewBag.PatientCurrentRoom
		}
		@if (ViewBag.PatientCurrentAppointmentId != null)
		{
			<a class="btn btn-sm btn-primary ms-3" asp-controller="Appointment" asp-action="Detail" asp-route-appId="@ViewBag.PatientCurrentAppointmentId">Xem chi tiết</a>
		}
	</div>
}

<!-- Header Start -->
<div class="container-fluid header bg-primary p-0 mb-5">
	<div class="row g-0 align-items-center flex-column-reverse flex-lg-row">
		<div class="col-lg-6 p-5 wow fadeIn" data-wow-delay="0.1s">
			<h1 class="display-4 text-white mb-5">Sức Khỏe Là Nền Tảng Của Hạnh Phúc</h1>
			<div class="row g-4">
				<div class="col-sm-4">
					<div class="border-start border-light ps-4">

						<h2 class="text-white mb-1" data-toggle="counter-up">@doctors</h2>
						<p class="text-light mb-0">Bác Sĩ Chuyên Môn</p>
					</div>
				</div>
				<div class="col-sm-4">
					<div class="border-start border-light ps-4">
						<h2 class="text-white mb-1" data-toggle="counter-up">@testdoctors</h2>
						<p class="text-light mb-0">Nhân Viên Y Tế</p>
					</div>
				</div>
				<div class="col-sm-4">
					<div class="border-start border-light ps-4">
						<h2 class="text-white mb-1" data-toggle="counter-up">@patientCount</h2>
						<p class="text-light mb-0">Tổng Số Bệnh Nhân</p>
					</div>
				</div>
			</div>
		</div>
		<div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
			<div class="owl-carousel header-carousel">
				<div class="owl-carousel-item position-relative">
					<img class="img-fluid" src="~/img/carousel-1.jpg" alt="Tim mạch">
					<div class="owl-carousel-text">
						<h1 class="display-1 text-white mb-0">Tim Mạch</h1>
					</div>
				</div>
				<div class="owl-carousel-item position-relative">
					<img class="img-fluid" src="~/img/carousel-2.jpg" alt="Thần kinh">
					<div class="owl-carousel-text">
						<h1 class="display-1 text-white mb-0">Thần Kinh</h1>
					</div>
				</div>
				<div class="owl-carousel-item position-relative">
					<img class="img-fluid" src="~/img/carousel-3.jpg" alt="Hô hấp">
					<div class="owl-carousel-text">
						<h1 class="display-1 text-white mb-0">Hô Hấp</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Header End -->
<!-- About Start -->
<div class="container-xxl py-5">
	<div class="container">
		<div class="row g-5">
			<div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
				<div class="d-flex flex-column">
					<img class="img-fluid rounded w-75 align-self-end" src="/img/about-1.jpg" alt="Hình ảnh đội ngũ y tế">
					<img class="img-fluid rounded w-50 bg-white pt-3 pe-3" src="/img/about-2.jpg" alt="Hình ảnh bệnh viện" style="margin-top: -25%;">
				</div>
			</div>
			<div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
				<p class="d-inline-block border rounded-pill py-1 px-4">Về Chúng Tôi</p>
				<h1 class="mb-4">Tại Sao Bạn Nên Chọn Chúng Tôi?</h1>
				<p>Chúng tôi tự hào là bệnh viện hàng đầu với đội ngũ bác sĩ giàu kinh nghiệm và trang thiết bị y tế hiện đại. Mục tiêu của chúng tôi là mang đến dịch vụ chăm sóc sức khỏe chất lượng cao, giúp bạn và gia đình sống khỏe mạnh và hạnh phúc.</p>
				<p class="mb-4">Với hơn 20 năm hoạt động, chúng tôi đã phục vụ hàng ngàn bệnh nhân với sự tận tâm và chuyên nghiệp. Từ các dịch vụ khám chữa bệnh cơ bản đến các ca phẫu thuật phức tạp, chúng tôi luôn đặt sức khỏe của bạn lên hàng đầu.</p>
				<p><i class="far fa-check-circle text-primary me-3"></i>Chăm sóc sức khỏe toàn diện</p>
				<p><i class="far fa-check-circle text-primary me-3"></i>Bác sĩ chuyên môn cao</p>
				<p><i class="far fa-check-circle text-primary me-3"></i>Công nghệ y tế tiên tiến</p>
				<a asp-action="BookingType" asp-controller="Appointment" class="btn btn-primary rounded-pill py-2 px-4 mt-4">Đặt Lịch Ngay</a>
			</div>
		</div>
	</div>
</div>
<!-- About End -->
<!-- Service Start -->
<div class="container-xxl py-5">
	<div class="container">
		<div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
			<p class="d-inline-block border rounded-pill py-1 px-4">Dịch Vụ</p>
			<h1>Giải Pháp Chăm Sóc Sức Khỏe</h1>
		</div>
		<div class="row g-4">
			<div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
				<div class="service-item bg-light rounded h-100 p-5">
					<div class="d-inline-flex align-items-center justify-content-center bg-white rounded-circle mb-4" style="width: 65px; height: 65px;">
						<i class="fa fa-heartbeat text-primary fs-4"></i>
					</div>
					<h4 class="mb-3">Tim Mạch</h4>
					<p class="mb-4">Chẩn đoán và điều trị các bệnh lý tim mạch với đội ngũ bác sĩ chuyên khoa và công nghệ tiên tiến.</p>
				</div>
			</div>
			<div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
				<div class="service-item bg-light rounded h-100 p-5">
					<div class="d-inline-flex align-items-center justify-content-center bg-white rounded-circle mb-4" style="width: 65px; height: 65px;">
						<i class="fa fa-x-ray text-primary fs-4"></i>
					</div>
					<h4 class="mb-3">Hô Hấp</h4>
					<p class="mb-4">Cung cấp dịch vụ khám và điều trị các bệnh về phổi, đảm bảo sức khỏe hô hấp tối ưu.</p>
				</div>
			</div>
			<div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
				<div class="service-item bg-light rounded h-100 p-5">
					<div class="d-inline-flex align-items-center justify-content-center bg-white rounded-circle mb-4" style="width: 65px; height: 65px;">
						<i class="fa fa-brain text-primary fs-4"></i>
					</div>
					<h4 class="mb-3">Thần Kinh</h4>
					<p class="mb-4">Điều trị các rối loạn thần kinh và đột quỵ với phương pháp hiện đại và đội ngũ chuyên gia.</p>
				</div>
			</div>
			<div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
				<div class="service-item bg-light rounded h-100 p-5">
					<div class="d-inline-flex align-items-center justify-content-center bg-white rounded-circle mb-4" style="width: 65px; height: 65px;">
						<i class="fa fa-wheelchair text-primary fs-4"></i>
					</div>
					<h4 class="mb-3">Chấn Thương Chỉnh Hình</h4>
					<p class="mb-4">Phẫu thuật và phục hồi chức năng cho các chấn thương xương khớp với hiệu quả cao.</p>
				</div>
			</div>
			<div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
				<div class="service-item bg-light rounded h-100 p-5">
					<div class="d-inline-flex align-items-center justify-content-center bg-white rounded-circle mb-4" style="width: 65px; height: 65px;">
						<i class="fa fa-tooth text-primary fs-4"></i>
					</div>
					<h4 class="mb-3">Phẫu Thuật Nha Khoa</h4>
					<p class="mb-4">Dịch vụ nha khoa chất lượng cao từ nhổ răng đến cấy ghép implant.</p>
				</div>
			</div>
			<div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
				<div class="service-item bg-light rounded h-100 p-5">
					<div class="d-inline-flex align-items-center justify-content-center bg-white rounded-circle mb-4" style="width: 65px; height: 65px;">
						<i class="fa fa-vials text-primary fs-4"></i>
					</div>
					<h4 class="mb-3">Phòng Xét Nghiệm</h4>
					<p class="mb-4">Xét nghiệm chính xác với trang thiết bị hiện đại, hỗ trợ chẩn đoán nhanh chóng.</p>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Service End -->
<!-- Feature Start -->
