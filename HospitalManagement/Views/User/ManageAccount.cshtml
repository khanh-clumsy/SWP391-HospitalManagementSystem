                                {
                                    if ((string)ViewBag.Department == dept)
                                    {
                                        <option value="@dept" selected>@dept</option>
                                    }
                                    else
                                    {
                                        <option value="@dept">@dept</option>
                                    }
                                }
                            </select>
                        </div>
                        <!-- Search Button -->
                        <div class="col-md-2 d-grid">
                            <button class="btn btn-primary" type="submit">Tìm kiếm</button>
                        </div>
                    </div>
                </form>
