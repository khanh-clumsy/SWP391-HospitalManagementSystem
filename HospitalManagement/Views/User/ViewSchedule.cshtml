@model List<DoctorScheduleViewModel.ScheduleItem>

@{
	ViewData["Title"] = "Lịch làm việc của nhân viên";

	int selectedYear = (int)ViewBag.SelectedYear;
	DateOnly selectedWeekStart = (DateOnly)ViewBag.SelectedWeekStart;
	DateOnly selectedWeekEnd = selectedWeekStart.AddDays(6);
	DateOnly firstWeekStart = new DateOnly(selectedYear, 1, 1).AddDays(-((int)new DateTime(selectedYear, 1, 1).DayOfWeek + 6) % 7);
	DateOnly lastWeekStart = new DateOnly(selectedYear, 12, 25).AddDays(-((int)new DateTime(selectedYear, 12, 25).DayOfWeek + 6) % 7);


	DateOnly prevWeek = selectedWeekStart.AddDays(-7);
	DateOnly nextWeek = selectedWeekStart.AddDays(7);

	var daysInWeek = Enumerable.Range(0, 7).Select(i => selectedWeekStart.AddDays(i)).ToList();
	var slotsPerDay = (int)ViewBag.SlotsPerDay;
	var grouped = Model.GroupBy(s => (s.SlotId, s.Day)).ToDictionary(g => g.Key, g => g.ToList());
}


<style>
	table td {
		vertical-align: top;
	}

	.slot-attended,
	.slot-absent,
	.schedule-card {
		border-radius: 5px;
		padding: 10px;
		margin-bottom: 5px;
		box-shadow: 0 2px 5px rgba(0, 123, 255, 0.1);
		transition: background-color 0.2s, box-shadow 0.2s;
		cursor: pointer;
	}

	.schedule-card {
		border: 1px solid #007bff;
		border-top: 4px solid #007bff;
		background-color: #f8faff;
		color: black;
	}

		.schedule-card:hover {
			background-color: #e9f5ff;
			box-shadow: 0 2px 8px rgba(0, 123, 255, 0.3);
		}

	.slot-attended {
		border: 1px solid #28a745;
		border-top: 4px solid #28a745;
		background-color: #e6f9ea;
		color: black;
	}

		.slot-attended:hover {
			background-color: #d2f2d9;
			box-shadow: 0 2px 8px rgba(40, 167, 69, 0.3);
		}

	.slot-absent {
		border: 1px solid #ff1b1b;
		border-top: 4px solid #ff1b1b;
		background-color: #ffaa90;
		color: black;
	}

		.slot-absent:hover {
			background-color: #ff9980;
			box-shadow: 0 2px 8px rgba(255, 27, 27, 0.3);
		}


	.schedule-card i {
		color: #007bff;
	}

	.schedule-card .fw-bold {
		font-size: 1rem;
	}

	.bg-light {
		background-color: #f8f9fa;
	}

	.custom-back-btn {
		background-color: #006eff;
		border-color: #006eff;
		border-radius: 7px; /* 👈 Bo tròn rất nhẹ */
		font-weight: 500;
	}

		.custom-back-btn:hover {
			background-color: #005be0;
			border-color: #005be0;
		}
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4 mb-3">
	<div class="col-12">
		<a asp-action="ManageAccount" asp-route-type="Doctor" class="btn btn-primary custom-back-btn px-3 py-2">
			<i class="fas fa-arrow-left"></i> Trở về
		</a>
	</div>
	<br>
	<div class="justify-content-center">
		<h1 class="mb-3">Lịch làm việc trong tuần của @Model[0].DoctorName</h1>
	</div>
		
	<!-- Bộ chọn tuần, nút điều hướng -->
	<div id="scheduleTable">
		<div class="d-flex justify-content-center align-items-center mb-3 gap-2">
			<!-- Dropdown chọn năm bên trái -->
			<div class="d-flex align-items-center">
				<select id="yearDropdown" class="form-select" style="width:100px;" onchange="updateScheduleWithId(this.value)">
					@for (int y = 2023; y <= (int)DateTime.Now.Year + 1; y++)
					{
						if (y == selectedYear)
						{
							<option value="@y" selected>@y</option>
						}
						else
						{
							<option value="@y">@y</option>
						}
					}
				</select>
			</div>
			<!-- Cụm nút tuần ở giữa -->
			<div class="d-flex align-items-center gap-2">
				<!-- Nút tuần trước -->
				<button class="btn btn-outline-primary" onclick="changeWeekWithId(-1)" @(selectedWeekStart <= firstWeekStart ? "disabled" : "")>
					<i class="bi bi-chevron-left"></i>
				</button>

				<!-- Dropdown tuần -->
				<select id="weekDropdown" class="form-select" onchange="updateScheduleWithId()" style="width:250px;">
					@{
						var start = firstWeekStart;
						var end = lastWeekStart;
						while (start <= end)
						{
							var endOfWeek = start.AddDays(6);
							var label = $"{start:dd/MM} - {endOfWeek:dd/MM}";
							if (start == selectedWeekStart)
							{
								<option value="@start.ToString("yyyy-MM-dd")" selected> @label </option>
							}
							else
							{
								<option value="@start.ToString("yyyy-MM-dd")"> @label </option>
							}

							start = start.AddDays(7);
						}
					}
				</select>

				<!-- Nút tuần sau -->
				<button class="btn btn-outline-primary" onclick="changeWeekWithId(1)" @(selectedWeekStart >= lastWeekStart ? "disabled" : "")>
					<i class="bi bi-chevron-right"></i>
				</button>
			</div>

			<!-- (Có thể để trống hoặc thêm gì đó bên phải nếu muốn căn giữa tốt hơn) -->
			<div style="width:100px;"></div>
		</div>



		<!-- Bảng lịch -->
		<div>
			<table class="table table-bordered text-center">
				<thead class="table-light">
					<tr>
						<th>Slot</th>
						@foreach (var day in daysInWeek)
						{
							<th>@day.ToString("ddd dd/MM")</th>
						}
					</tr>
				</thead>
				<tbody>
					@for (int slot = 1; slot <= slotsPerDay; slot++)
					{
						<tr>
							<td><strong>Slot @slot</strong></td>
							@foreach (var day in daysInWeek)
							{
								var key = (slot, day);
								var isToday = (day == DateOnly.FromDateTime(DateTime.Today));

								<td>
									@if (grouped.ContainsKey(key))
									{
										foreach (var item in grouped[key])
										{
											@if (item.Status == "Absent")
											{
												<div class="slot-absent"
													 data-id="@item.ScheduleId"
													 data-day="@day"
													 data-start="@item.StartTime"
													 data-end="@item.EndTime"
													 data-room="@item.RoomName"
													 data-status="@item.Status"
													 data-istoday="@isToday">
													<div><i class="bi bi-clock me-1"></i> @item.StartTime - @item.EndTime</div>
													<div><i class="bi bi-building me-1"></i> @item.RoomName</div>
													<div><i class="bi bi-x-circle me-1"></i> Absent</div>
												</div>
											}
											else if (item.Status == "Attended")
											{
												<div class="slot-attended"
													 data-id="@item.ScheduleId"
													 data-day="@day"
													 data-start="@item.StartTime"
													 data-end="@item.EndTime"
													 data-room="@item.RoomName"
													 data-status="@item.Status"
													 data-istoday="@isToday">
													<div><i class="bi bi-clock me-1"></i> @item.StartTime - @item.EndTime</div>
													<div><i class="bi bi-building me-1"></i> @item.RoomName</div>
													<div><i class="bi bi-check-circle me-1"></i> Attended</div>
												</div>
											}
											else // Not Yet
											{
												<div class="schedule-card"
													 data-id="@item.ScheduleId"
													 data-day="@day"
													 data-start="@item.StartTime"
													 data-end="@item.EndTime"
													 data-room="@item.RoomName"
													 data-status="@item.Status"
													 data-istoday="@isToday">
													<div><i class="bi bi-clock me-1"></i> @item.StartTime - @item.EndTime</div>
													<div><i class="bi bi-building me-1"></i> @item.RoomName</div>
													<div><i class="bi bi-check-circle me-1"></i> Not Yet</div>

												</div>
											}

										}
									}
								</td>
							}
						</tr>
					}

				</tbody>
			</table>
		</div>
	</div>

</div>


<script>
	function updateScheduleWithId(newyear = 0) {
		let year = newyear !== 0 ? newyear : document.getElementById("yearDropdown").value;
		let weekStart = newyear !== 0
		? (new Date(newyear, 0, 1)).toLocaleDateString().split('T')[0]
		: document.getElementById("weekDropdown").value;
		// Lấy doctorId từ Model
		const doctorId = @Model[0].DoctorId;

		// Chuyển hướng về controller User/ViewSchedule
		const url = `/User/ViewSchedule?id=${doctorId}&year=${year}&weekStart=${weekStart}`;
		window.location.href = url;
	}

	function changeWeekWithId(offset) {
		const weekDropdown = document.getElementById("weekDropdown");
		const options = weekDropdown.options;
		const current = weekDropdown.selectedIndex;
		const newIndex = current + offset;

		if (newIndex >= 0 && newIndex < options.length) {
			weekDropdown.selectedIndex = newIndex;
			updateScheduleWithId(0);
		}
	}
</script>

@section Scripts {
	<script src="~/js/ViewSchedule.js" asp-append-version="true"></script>
}
