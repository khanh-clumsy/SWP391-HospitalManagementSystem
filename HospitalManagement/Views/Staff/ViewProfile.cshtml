@model HospitalManagement.Models.Staff
@{
    ViewData["Title"] = "View Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="/css/doctorprofile.css" rel="stylesheet">
</head>
<body>
    <div class="container-xxl doctor-profile py-5">
        <div class="container">

            <div class="row mb-4">
                <div class="col-12">
                    <a asp-controller="Home" asp-action="Index" class="back-to-list">
                        <i class="fas fa-arrow-left"></i> Về trang chủ
                    </a>
                </div>
            </div>

            <div class="row g-4 align-items-stretch">
                <!-- Image Section -->
                <div class="col-lg-4">
                    <div class="profile-card text-center">
                        <div class="profile-image">
							<img src="@(string.IsNullOrEmpty(Model.ProfileImage)
                                                     ? Url.Content("~/img/logo.jpg")
                                                     : Url.Content("~/img/"+Model.ProfileImage))"
								 alt="Current Photo"
								 class="shadow mb-2" />
						</div>
                        <div class="profile-buttons">
                            <div class="d-flex gap-2 justify-content-center flex-wrap">
                                <a class="btn btn-primary flex-fill" asp-controller="Staff" asp-action="UpdateProfile">Cập nhật hồ sơ</a>
                                <a class="btn btn-primary flex-fill" asp-controller="Staff" asp-action="ChangePassword">Đổi mật khẩu</a>
                                <a class="btn btn-outline-primary flex-fill" asp-controller="Staff" asp-action="Logout">Đăng xuất</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Information Section -->
                <div class="col-lg-8">
                    <div class="profile-card">
                        <div class="profile-info">
                            <h2>Thông tin nhân viên</h2>

                            <div class="info-item">
                                <div class="info-icon"><i class="fas fa-user"></i></div>
                                <div class="info-content">
                                    <h5>Họ và tên</h5>
                                    <p>@Model.FullName</p>
                                </div>
                            </div>

                            <div class="info-item">
                                <div class="info-icon"><i class="fas fa-envelope"></i></div>
                                <div class="info-content">
                                    <h5>Email</h5>
                                    <p>@Model.Email</p>
                                </div>
                            </div>

                            <div class="info-item">
                                <div class="info-icon"><i class="fas fa-phone"></i></div>
                                <div class="info-content">
                                    <h5>Số điện thoại</h5>
                                    <p>@Model.PhoneNumber</p>
                                </div>
                            </div>

                            <div class="info-item">
                                <div class="info-icon"><i class="fas fa-venus-mars"></i></div>
                                <div class="info-content">
                                    <h5>Giới tính</h5>
                                    <p>@Model.GetFullGender()</p>
                                </div>
                            </div>

                            <div class="info-item">
                                <div class="info-icon"><i class="fas fa-briefcase"></i></div>
                                <div class="info-content">
                                    <h5>Chức vụ</h5>
                                    <p>
                                        @{
                                            var roleVi = Model.RoleName;
                                            if (roleVi == "Admin") { roleVi = "Quản trị viên"; }
                                            else if (roleVi == "Sales") { roleVi = "Nhân viên kinh doanh"; }
                                            else if (roleVi == "Receptionist") { roleVi = "Lễ tân"; }
                                        }
                                        @roleVi
                                    </p>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>

