@model HospitalManagement.ViewModels.ChangePass
@{
	ViewData["Title"] = "Change Password";
}
<!DOCTYPE html>
<html lang="en">
<head>
	<!-- Template Stylesheet -->
	<link href="/css/doctorprofile.css" rel="stylesheet">
	<style>
		#loadingOverlay {
			display: none !important;
		}
	</style>
</head>
<body>

	<div class="container-xxl doctor-profile py-5">
		<div class="container">

			<div class="row mb-4">
				<div class="col-12">
					<a asp-controller="Home" asp-action="Index" class="back-to-list">
						<i class="fas fa-arrow-left"></i>
						Về trang chủ
					</a>
				</div>
			</div>

			<div class="wrap-login100 p-5 bg-white rounded shadow">
				<div>
					<h3 class="text-center mb-4">Đổi mật khẩu</h3>
				</div>

				@Html.ValidationSummary(true, "", new { @class = "text-danger w-100 text-center mb-2" })

				<form asp-action="ChangePassword" asp-controller="Staff" method="post">
					<div class="form-group mb-3">
						<label>Mật khẩu hiện tại</label>
						<input asp-for="OldPassword" class="form-control" type="password" />
						<span asp-validation-for="OldPassword" class="text-danger small"></span>
					</div>


					<div class="form-group mb-3 validate-input">
						<label>Mật khẩu mới</label>
						<input asp-for="NewPassword" type="password"
							   id="NewPassword"
							   name="NewPassword"
							   data-val="true"
							   data-val-required="Vui lòng nhập mật khẩu mới."
							   data-val-minlength="Mật khẩu phải có ít nhất 6 ký tự."
							   data-val-minlength-min="6"
							   data-val-regex="Mật khẩu phải có ít nhất 6 ký tự, bao gồm ít nhất 1 chữ hoa và 1 số."
							   data-val-regex-pattern="^(?=.*[A-Z])(?=.*\d).{6,}$"
							   class="input100 form-control" />
						<span asp-validation-for="NewPassword" class="text-danger small"></span>
					</div>



					<div class="form-group mb-3">
						<label>Xác nhận mật khẩu mới</label>
						<input asp-for="ConfirmPassword" class="form-control" type="password" />
						<span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
					</div>
					<button type="submit" class="btn btn-primary mt-3 w-100">Cập nhật mật khẩu</button>
				</form>
			</div>

		</div>
	</div>

	<!-- Back to Top -->
	<a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-circle back-to-top"><i class="bi bi-arrow-up"></i></a>

	<!-- JavaScript Libraries -->
	<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/lib/wow/wow.min.js"></script>
	<script src="/lib/easing/easing.min.js"></script>
	<script src="/lib/waypoints/waypoints.min.js"></script>
	<script src="/lib/counterup/counterup.min.js"></script>
	<script src="/lib/owlcarousel/owl.carousel.min.js"></script>
	<script src="/lib/tempusdominus/js/moment.min.js"></script>
	<script src="/lib/tempusdominus/js/moment-timezone.min.js"></script>
	<script src="/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
	<script src="/js/main.js"></script>

</body>
</html>
